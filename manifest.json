{
    "manifest_version": 2,
  
    "name": "Greet User",
    "description": "This extension will greet the user based on daytime",
    "version": "1.0",
    
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "greet.html"
    },
   

    "permissions": [
     "activeTab"
     ]
  }